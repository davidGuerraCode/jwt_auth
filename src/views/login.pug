extends vendor/layout/head.pug

block content
  form
    .form-container
      h1 Long in
      .form-field
        label(for="email") Email
        input#email(type="text" required placeholder="test@mail.com" name="email" autofocus)
        span.email.error
      .form-field
        label(for="password") Password
        input#password(type="password" name="password" required)
        span.password.error
      button(type="submit") Log in

  script
    include ./login.js

